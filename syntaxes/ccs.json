{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ccs",
	"scopeName": "source.ccs",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
				"name": "keyword.control.ccs",
				"match": "@(?:import|context)\\b"
				},
				{
				"name": "keyword.other.ccs",
				"match": "@(?:constrain|override)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
				"name": "comment.line.double-slash.ccs",
				"begin": "//",
				"end": "\n"
				},
				{
				"name":"comment.block.ccs",
				"begin": "\/[*]",
				"end": "[*](\/)"
				}
			]
		},
		"strings": {
			"patterns": [
				{
				"name":"string.quoted.single.ccs",
				"begin": "'",
				"end": "'"
				},
				{
				"name":"string.quoted.double.ccs",
				"begin": "\"",
				"end": "\""
				}
			]
		},
		"variables": {
			"patterns": [
				{
				"name": "variable.language.ccs"	,
				"match": "\\b\\w+\\b\\s*="
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.character",
					"match": ">|:|;|,"
				},
				{
					"name": "constant.language",
					"match": "\\b(?:true|false)\\b"
				},
				{
					"name": "constant.numeric",
					"match": "\\W+(?x:-?(?:0|[1-9]\\d*)(?:(?:\\.\\d+)?(?:[eE][+-]?\\d+)?)?)\\b"
				}
			]
		}
	}
}
